{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" },
    { 
      "src": "api/**/*.ts", 
      "use": "@vercel/node",
      "config": { "tsconfig": "tsconfig.api.json" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { 
      "src": "^/assets/(.*)",
      "dest": "/assets/$1"
    },
    { 
      "src": "^/(?!api).*", 
      "dest": "/index.html",
      "headers": { "Cache-Control": "public, max-age=0, must-revalidate" }
    }
  ]
}